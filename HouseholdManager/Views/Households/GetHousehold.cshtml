@model HouseholdModel

<div class="container">
    <div class="row">
        <div class="col-12 mx-auto text-center text-primary my-4">
            <h1>Household</h1>
            <hr />
        </div>
        <div class="col-6 mx-auto">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-responsive table-bordered table-striped display">
                        <thead class="thead-dark">
                            <tr>
                                <th>Name</th>
                                <th>Created</th>
                                <th>Updated</th>
                            </tr>
                        </thead>
                        <tfoot class="thead-dark">
                            <tr>
                                <th>Name</th>
                                <th>Created</th>
                                <th>Updated</th>
                            </tr>
                        </tfoot>
                        <tbody class="text-primary">
                            <tr>
                                <td>@Model.Name</td>
                                <td>@Model.Created</td>
                                @if (Model.Updated.HasValue)
                                {
                                    <td>@Model.Updated</td>
                                }
                                else
                                {
                                    <td>never</td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-6 my-4 mx-auto">
            @if (Request.Cookies["UserName"]?.Value == Model.OwnerEmail)
            {
                @Html.ActionLink("Edit Household", "Edit", "Households", new { id = Model.Id }, new { @class = "btn-sm btn-warning mx-1" })
                @Html.ActionLink("Delete Household", "Delete", "Households", new { id = Model.Id }, new { @class = "btn-sm btn-danger" })
            }

            <h2>Description</h2>
            <p>@Model.Description</p>
        </div>

        <div class="col-6 my-1 mx-auto">
            @Html.Action("Members", "Households", new { Id = Model.Id })
        </div>

        <div class="col-6 my-1 mx-auto">
            @if (Request.Cookies["UserName"]?.Value == Model.OwnerEmail)
