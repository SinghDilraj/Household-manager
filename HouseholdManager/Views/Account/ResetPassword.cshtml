@model  ResetPasswordModel

<div class="container">
    <div class="row">
        <div class="col-sm-10 col-md-8 col-lg-8 mx-auto my-3">
        <h5 class="text-center">
            Please Check your Email for a Password Reset Code.
        </h5>
        </div>
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card">
                <div class="card-body bg-light">
                    <h5 class="card-title text-center text-danger">Forgot Password</h5>
                    <hr />
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true)
                        <div class="form-label-group">
                            @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
                            @Html.LabelFor(p => p.Code, new { })
                            @Html.TextBoxFor(p => p.Code, new { @class = "form-control", autofocus = true })
                        </div>
                        <div class="form-label-group">
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            @Html.LabelFor(p => p.Email, new { })
                            @Html.TextBoxFor(p => p.Email, new { @class = "form-control", autofocus = true })
                        </div>

                        <div class="form-label-group mt-4">
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            @Html.LabelFor(p => p.Password, new { })
                            @Html.PasswordFor(p => p.Password, new { @class = "form-control" })
                        </div>

                        <div class="form-label-group mt-4">
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            @Html.LabelFor(p => p.ConfirmPassword, new { })
                            @Html.PasswordFor(p => p.ConfirmPassword, new { @class = "form-control" })
                        </div>
                        <div class="form-group mt-4">
                            <button class="btn btn-lg btn-success btn-block text-uppercase" type="submit">Reset Password</button>
                        </div>
                    }
                    <div class="form-group mt-4">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>