@model InviteUserModel

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card my-5">
                <div class="card-body bg-light">
                    <h5 class="card-title text-center text-danger">Create Household</h5>
                    <hr />
                    @using (Html.BeginForm("InviteUser", "Households", FormMethod.Post, new { @class = "mt-4" }))
                    {
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(p => p.HouseholdId)
                        <div class="form-label-group">
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            @Html.LabelFor(p => p.Email, new { })
                            @Html.TextBoxFor(p => p.Email, new { @class = "form-control", autofocus = true })
                        </div>
                        <div class="form-group mt-4">
                            <button class="btn btn-lg btn-success btn-block text-uppercase" type="submit">Invite</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>