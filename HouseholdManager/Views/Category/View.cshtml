@model  CategoryModel
<div class="container">
    <div class="row text-center">
        <div class="col-12 mx-auto text-center text-primary my-4">
            <h1>Category</h1>
            <hr />
        </div>
        <div class="col-12 mx-auto">
            @if (ViewBag.IsOwner)
            {
                @Html.ActionLink("Create Category", "Create", "Category", new { HouseholdId = Model.Id }, new { @class = "btn btn-success" })
            }
        </div>
        <div class="col-6 mx-auto">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-responsive table-bordered table-striped display">
                        <thead class="thead-dark">
                            <tr>
                                <th>Name</th>
                                <th>Created</th>
                                <th>Updated</th>
                            </tr>
                        </thead>
                        <tfoot class="thead-dark">
                            <tr>
                                <th>Name</th>
                                <th>Created</th>
                                <th>Updated</th>
                            </tr>
                        </tfoot>
                        <tbody class="text-primary">
                            <tr>
                                <td>@Model.Name</td>
                                <td>@Model.Created</td>
                                @if (Model.Updated.HasValue)
                                {
                                    <td>@Model.Updated</td>
                                }
                                else
                                {
                                    <td>never</td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-12 my-3">
            @if (ViewBag.IsOwner)
            {
                @Html.ActionLink("Edit", "Edit", "Category", new { id = Model.Id }, new { @class = "btn btn-warning ml-3 mr-1" })
                @Html.ActionLink("Delete", "Delete", "Category", new { id = Model.Id }, new { @class = "btn btn-danger" })
            }
            <h2 class="my-4 text-info">Description</h2>
            <p>@Model.Description</p>
        </div>
    </div>
</div>