@model  TransactionModel

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card my-5">
                <div class="card-body bg-light">
                    <h5 class="card-title text-center text-danger">Create Transaction</h5>
                    <hr />
                    @using (Html.BeginForm("Create", "Transactions", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(p => p.BankAccountId)
                        <div class="form-label-group">
                            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                            @Html.LabelFor(p => p.Title, new { })
                            @Html.TextBoxFor(p => p.Title, new { @class = "form-control", autofocus = true })
                        </div>

                        <div class="form-label-group mt-4">
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                            @Html.LabelFor(p => p.Description, new { })
                            @Html.TextAreaFor(p => p.Description, new { @class = "form-control" })
                        </div>
                    
                        <div class="form-label-group mt-4">
                            @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
                            @Html.LabelFor(p => p.Amount, new { })
                            @Html.TextAreaFor(p => p.Amount, new { @class = "form-control" })
                        </div>
                        
                        <div class="form-label-group mt-4">
                            @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
                            @Html.DropDownListFor(p => p.Category, ViewBag.Categories)
                            @Html.TextAreaFor(p => p.Category, new { @class = "form-control" })
                        </div>
                    
                        <div class="form-label-group mt-4">
                            @Html.ValidationMessageFor(m => m.Initiated, "", new { @class = "text-danger", type="dateTime" })
                            @Html.LabelFor(p => p.Initiated, new { })
                            @Html.TextAreaFor(p => p.Initiated, new { @class = "form-control" })
                        </div>

                        <div class="form-group mt-4">
                            <button class="btn btn-lg btn-success btn-block text-uppercase" type="submit">Create</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>